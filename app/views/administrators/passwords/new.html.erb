<div class="container-fluid bg-light text-dark m-2">
  <div class="row justify-content-center align-items-center h-100">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "administrators/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, required: true, class:'form-control', placeholder: 'Email address', style:"height: 30px; width: 18rem;" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-primary my-2' %>
      </div>
    <% end %>

    <%= render "administrators/shared/links" %>
  </div>
</div>
