<div class="container-fluid bg-light text-dark m-3">
  <div class="row">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="field">
          <%= f.label :email, class:"m-1" %>
          <%= f.email_field :email, required: true, class:'form-control', placeholder: 'Email address', style:"height: 30px; width: 18rem;" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password, class:"m-1" %>
          <%= f.password_field :password, required: true, class:'form-control', placeholder: "Password", style:"height: 30px; width: 18rem;" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-primary my-2' %>
      </div>
    <% end %>
    <%= render "administrators/shared/links" %>
  </div>
</div>
